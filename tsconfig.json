{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react-native",
    "lib": [ "es2015", "es2016", "es2017" ],
    "target": "es5",
    "outDir": "./dist/out-tsc",
    "module": "es2015",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "paths": {
      "src/*" : ["src/*"],
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "android",
    "ios"
  ],
}
